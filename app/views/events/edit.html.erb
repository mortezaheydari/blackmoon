<h1>Events#edit</h1>

<--  Back to <%= link_to "index", events_path %>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@event) do |f| %>
			<div>
				<%= f.label :title, "Event Title" %>
				<%= f.text_field :title %>
			</div>

			<div>
				<%= f.label :category, "Category" %>
				<%= f.text_field :category %>
			</div>

			<div>
				<%= f.label :date_and_time %><br />
				<%= select_date @date_and_time, :prefix => :date_and_time %>
			</div>

			<div>
				<%= f.label :descreption, "Event Title" %>
				<%= f.text_area :descreption %>
			</div>

			<div>
				<%= f.label :custom_address, "Address" %>
				<%= f.text_area :custom_address %>
			</div>

			<div>
				<%= f.submit "Update the Event", class: "btn btn-large btn-primary" %>
			</div>
			
		<% end %>
	</div>
</div>

