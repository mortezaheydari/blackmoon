
<div class="body">
    <div class="offering">

                    <h1><%= image_tag "event-icon.png", width: 50 %> Update Event Information</h1>

            <%= form_for(@photo, :url => logos_update_path(@photo, owner_type: "Event", owner_id: @event.id), :html => { :method => "post" }) do |p| %>
                    <h2>Image</h2>

                <table>
                    <tr>
                        <td colspan="2">
                            <div class="gravatarContainer">
                                <%= logo_for @event, size: :medium %>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <label class="cabinet center">
                            <span class="btn btn-success fileinput-button">
                                <i class="icon-plus"></i>
                                <span>Select file...</span>
                                <!-- The file input field used as target for the file upload widget -->
                                <%= p.file_field :image, class: "file", id: "fileupload" %>
                            </span>
                            </label>
                            <br>
                                <img id="previewImg" src="#" alt="your image" />
                            <p id="files"></p>
                            <div id="progress" class="progress progress-striped active">
                                <div class="bar bar-success"></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <%= p.submit 'Upload', class: "btn center", id: 'uploadPic' %>
                        </td>
                    </tr>

                </table>
            <% end %>


        <%= form_for(@event) do |f| %>

                            <p>Category</p>
                            <div class="<%= @event.category %> left"></div> <br>

                            <div>

                                <table  width="100%">
                                    <tr>
                                        <td width="130"><%= f.label :sport, "b. Select an Activity:" %></td>
                                        <td><label><%= @event.sport %></label></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :title, "Event Title: " %></td>
                                        <td><%= f.text_field :title %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :descreption, "Description" %></td>
                                        <td><%= f.text_area :descreption %></td>
                                    </tr>
                                </table>
                            </div>
<hr>

                    <h2>2. <%= image_tag "location-icon.png", width: 50 %> Location</h2>

                            <div>
                                <table width="100%">
                                    <tr>
                                        <td width="130"><%= f.label :custom_address, "Select the city:" %></td>
                                        <td><%= f.select :custom_address, ["Al-Salmiyah", "Kuwait City"] %></td>
                                    </tr>
                                </table>

                            </div>

<hr>
                    <h2>3. <%= image_tag "payment-icon.png", width: 50 %> Payment</h2>
                            <div>
                                <table width="100%">
                                    <tr>
                                        <td width="130"><%= f.label :fee_type, "Payment Option" %></td>
                                        <td><%= f.select :fee_type, ["Free", "Cash"] %></td>
                                    </tr>
                                    <tr id="AmountRow">
                                        <td><%= f.label :fee, "Amount" %></td>
                                        <td><%= f.number_field :fee %></td>
                                    </tr>
                                </table>
                            </div>

<hr>

                    <h2>4. Time &amp; Limits</h2>

                            <div>
                                <table width="100%">
                                    <tr>
                                        <td width="130"><%= f.label :number_of_attendings, "Number of attendings" %></td>
                                        <td><%= f.number_field :number_of_attendings %></td>
                                    </tr>

                                    <%= render "shared/happening_case", happening_case: @happening_case %>
                                    <tr>
                                        <td><%= f.label :team_participation, "Team Participation" %></td>
                                        <td><%= f.select :team_participation, {"Yes" => true, "No" => false} %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :open_join, "Open for all to join" %></td>
                                        <td><%= f.select :open_join, {"Yes" => true, "No" => false} %></td>
                                    </tr>
                                </table>
                            </div>



    </div>
                <%= f.submit "Update the Event", class: "button grey submitBtn homeBtn left" %>


        <% end %>
</div>
