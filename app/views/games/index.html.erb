  <div class="body">
  <div class="container-fluid">
<%= render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder, :separator => " / " %>



    <div class="row-fluid search_container">
        <div class="span12">
            <!-- <h2 class="header_text">Search</h2> -->
            <%= form_tag games_path, :method => :get, class: "custom" do %>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Search", :name => nil, class: "btn" %>
                <%= label_tag 'team_participation', id: "team_participation_label" do %>
                        <%= check_box_tag :team_participation, :checked, (true if params[:team_participation] == "checked")  %> Team participation
                <% end -%>
                <%= hidden_field_tag 'sport',  params[:sport] %>
            <% end %>
        </div>
    </div>

    <hr>


<div class="row-fluid">
    <div class="cardsection span9">
            <% i = 0 %>
        <% @games.each do |g| %>
            <% if i == 0 %>
                <div class="row-fluid">
            <% end %>
            <div class="span4 indexCards">
                <%= render 'shared/offering/offering', offering: g, class_name: "gameList" %>
            </div>
                <% if i == 2 || g == @games.last %>
                    </div>
                <% end %>
            <%
                    if i == 2
                        i = 0
                    else
                        i = i + 1
                    end
            %>
        <% end %>
    </div>



        <div class="span3">

            <ul class="nav nav-list">
                <li class="divider"></li>
                 <li class="nav-header">Sports</li>
                <li class="divider"></li>
        <% for row in @search.facet(:sport).rows %>

          <li>
            <% if params[:sport].blank? %>
                <%= link_to row.value + " " + "(#{row.count})", :sport => row.value, search: params[:search], team_participation: params[:team_participation] %>
            <% else %>
                <%= link_to "#{row.value} (remove)", :sport => nil, search: params[:search],  team_participation: params[:team_participation]  %>
            <% end %>
        <% end %>
              </li>
                <li class="divider"></li>
            </ul>

          <div class="sideBox span12 activitySideBox hero-unit">
            <hr>
            <div class="nav-header">Activity Feed</div>
                <%= render 'shared/activity_sidebar', recent_activities: @recent_activities %>
          </div>
        </div>
</div>



  </div>
  </div>