
<div class="body">
    <div class="offering">
                    <h1><%= image_tag "tournament-icon.png", width: 120 %> Create New Game</h1>
        <%= form_for(@game) do |f| %>
                            <h2>1. Set up Activity</h2>

                            <p>a. Select a Category</p>

                            <div>
                                <table id="categoryChoice">
                                    <tr>
                                        <td><%= f.radio_button :category, "BallSports", value: "BallSports", checked: true %></td>
                                        <td><%= f.radio_button :category, "Fitness", value: "Fitness" %></td>
                                        <td><%= f.radio_button :category, "WaterSports", value: "WaterSports" %></td>
                                    </tr>
                                    <tr>
                                        <td>Ball Sports</td>
                                        <td>Fitness</td>
                                        <td>Water Sports</td>
                                    </tr>
                                </table>
                            </div> <br>

                            <div>
                                <table  width="100%">
                                    <tr>
                                        <td width="130"><%= f.label :sport, "b. Select an Activity:" %></td>
                                        <td>
                                            <div id="BallList"><%= f.select :sport, ball_sport_names_list,{}, { :data => { :live_search => "true" } } %></div>
                                            <div id="FitList"><%= f.select :sport, fitness_names_list,{}, { :data => { :live_search => "true" } } %></div></div>
                                            <div id="WaterList"><%= f.select :sport, water_sport_names_list,{}, { :data => { :live_search => "true" } } %></div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :title, "Game Title: " %></td>
                                        <td><%= f.text_field :title %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :description, "Description" %></td>
                                        <td><%= f.text_area :description %></td>
                                    </tr>
                                </table>
                            </div>
<hr>

                    <h2>2. <%= image_tag "location-icon.png", width: 50 %> Location</h2>
                            <div>
                                <table width="100%">
                                    <tr>
                                        <td width="130"><%= label_tag 'location_type', 'Location Type' %></td>
                                        <td><%= select_tag "location_type", options_for_select([["Custom Location", "custom_location"], ["Existing Venue", "parent_location"] ]) %></td>
                                    </tr>
                                </table>
                            </div>
                        <div class="venue_list">
                                <table width="100%">
                                    <tr>
                                        <td width="130"><%= label_tag 'referenced_venue_id', 'Venue' %></td>
                                        <td><%= select_tag "referenced_venue_id", options_from_collection_for_select(@venues, "id", "title"), { :data => { :live_search => "true" } } %></td>
                                    </tr>
                                </table>
                        </div>
                        <div class="location_partial_container">
                            <%= render "shared/location", location: @location, f: f, form_type: "new" %>
                        </div>


<hr>
                    <h2>3. <%= image_tag "payment-icon.png", width: 50 %> Payment</h2>
                            <div>
                                <table width="100%">
                                    <tr>
                                        <td width="130"><%= f.label :fee_type, "Payment Option" %></td>
                                        <td><%= f.select :fee_type, ["Free", "Cash"] %></td>
                                    </tr>
                                    <tr id="AmountRow">
                                        <td><%= f.label :fee, "Amount" %></td>
                                        <td><%= f.number_field :fee %></td>
                                    </tr>
                                </table>
                            </div>

<hr>

                    <h2>4. Time &amp; Limits</h2>

                            <div>
                                <table width="100%">
<tr>
                                        <td width="130"><%= f.label :number_of_attendings, "Number of attendings" %></td>
                                        <td><%= f.number_field :number_of_attendings %></td>
                                    </tr>

                                    <%= render "shared/happening_case", happening_case: @happening_case %>
                                    <tr>
                                        <td><%= f.label :team_participation, "Team Participation" %></td>
                                        <td><%= f.select :team_participation, {"Yes" => true, "No" => false} %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :open_join, "Open for all to join" %></td>
                                        <td><%= f.select :open_join, {"Yes" => true, "No" => false} %></td>
                                    </tr>
                                </table>
                            </div>


                <%= f.submit "Create the game", class: "button grey submitBtn homeBtn left" %>


        <% end %>
    </div>
</div>


<%= content_for :scripts do %>
    <script type="text/javascript" charset="utf-8">
      var markersArray = [];
      Gmaps.map.callback = function() {
        var marker = Gmaps.map.markers[0];
        if (marker) {
          // Move existing marker when editing a previously stored location
          google.maps.event.addListener(marker.serviceObject, 'dragend', function() {
            updateFormLocation(this.getPosition());
          });
        }

        // On click, clear markers, place a new one, update coordinates in the form
        google.maps.event.addListener(Gmaps.map.serviceObject, 'click', function(event) {
          clearOverlays();
          placeMarker(event.latLng);
          updateFormLocation(event.latLng);
        });
      };
      // Update form attributes with given coordinates
      function updateFormLocation(latLng) {
        $('#game_location_latitude').val(latLng.lat());
        $('#game_location_longitude').val(latLng.lng());
        $('#centre_gmaps_zoom').val(Gmaps.map.serviceObject.getZoom());
      }
      // Add a marker with an open infowindow
      function placeMarker(latLng) {
        var marker = new google.maps.Marker({
          position: latLng,
          map: Gmaps.map.serviceObject,
          draggable: true
        });
        markersArray.push(marker);
        // Set and open infowindow
        var infowindow = new google.maps.InfoWindow({
          content: ''
        });
        infowindow.open(Gmaps.map.serviceObject, marker);
        // Listen to drag & drop
        google.maps.event.addListener(marker, 'dragend', function() {
          updateFormLocation(this.getPosition());
        });
      }
      // Removes the overlays from the map, including the ones loaded with the map itself
      function clearOverlays() {
        for (var i = 0; i < markersArray.length; i++ ) {
          markersArray[i].setMap(null);
        }
        markersArray.length = 0;

        for (var i = 0; i < Gmaps.map.markers.length; i++ ) {
          Gmaps.map.clearMarker(Gmaps.map.markers[i]);
        }
      }
    </script>
<% end %>