<!DOCTYPE html>
<html>
<head>
  <title>Blackmoon</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
   <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head><script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<body>
  <div class="page">
    <div id="headerContainer">
      <header id="main">
        <div id="headerLeft">
          <%= link_to image_tag("logo.png"), root_path, id: "mainLogo" %>
          <input type="search" placeholder="search" />
        </div>
            <% if account_signed_in? %>
                <%= render 'shared/header_top_user' %>
            <% else %>
                <%= render 'shared/header_top_guest' %>
            <% end %>
      </header>
    </div>
<div>
<% if notice %>
    <p id="notice" ><%= notice %></p>
<% elsif alert %>
    <p id="alert" ><%= alert %></p>
<% end %>
</div>
<%= yield %>

<%= render 'shared/modal' %>
<%= render 'shared/signin_modal' %>
<%= render 'shared/signup_modal' %>

</body>
</html>
