<!DOCTYPE html>
<html>
<head>
  <title>Blackmoon</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page">
    <div id="headerContainer">
      <header id="main">
        <div id="headerLeft">
          <%= link_to image_tag("logo.png"), root_path, id: "mainLogo" %>
          <input type="search" placeholder="search" />
        </div>
            <% if account_signed_in? %>
                <div id="headerMenu">
                  <div id="dashboard" class="left">
                    <div class="left"></div>
                    <a href="#">Dashboard</a>
                  </div>
                  <div id="notiMenu" class="left">
                    <div class="left"></div>
                    <a href="#">Notifications</a>
                  </div>
                  <div id="createNewMenu" class="left">
                    <div class="left"></div>
                    <a href="#">Create New</a>
                  </div>
                  <div id="userMenu">
                    <a href="#"><%= image_tag "rails.png", :class => "left" %> Morteza Heydari</a>
                    <ul id="userDrop">
                      <li>
                        <div id="editProfile" class="left">
                          <div class="left"></div>
                          <%= link_to "Edit Profile", edit_user_path(current_user.id) %>
                        </div>
                      </li>
                      <li>
                        <div id="manageOffering" class="left">
                          <div class="left"></div>
                          <a href="#">Manage Offerings</a>
                        </div>
                      </li>
                      <hr>
                      <li><%=  link_to "Sign out", destroy_account_session_path, id: "signOutTop", method: :delete  %></li>
                    </ul>
                  </div>

                </div>
            <% end %>
      </header>
    </div>

<%= yield %>
<div class="VideoContainer"><%= debug(params) if Rails.env.development? %></div>
</div>
</body>
</html>
