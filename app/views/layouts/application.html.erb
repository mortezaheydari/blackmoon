<!DOCTYPE html>
<html>
<head>
  <title>Blackmoon</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
   <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="page">
    <div id="headerContainer">
      <header id="main">
        <div id="headerLeft">
          <%= link_to image_tag("logo.png"), root_path, id: "mainLogo" %>
          <input type="search" placeholder="search" />
        </div>
            <% if account_signed_in? %>
                <%= render 'shared/header_top_user' %>
            <% else %>
                <%= render 'shared/header_top_guest' %>
            <% end %>
      </header>
    </div>

<%= yield %>
<!-- <div class="VideoContainer"><%= debug(params) if Rails.env.development? %></div>
</div> -->
<%= render 'shared/modal' %>
<%= render 'shared/signin_modal' %>
<%= render 'shared/signup_modal' %>


</body>
</html>
