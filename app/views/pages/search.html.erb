  <div class="body">
  <div class="container-fluid">
<%= render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder, :separator => " / " %>



    <%= render "shared/search_offering", search_type: "main_search" %>

    <hr>

    <div class="row-fluid">
        <div class="cardsection span9">
            <% i = 0 %>
            <% @offerings.each do |offering| %>
                <% if i == 0 %>
                <div class="row-fluid">
                <% end %>
                <div class="span4 indexCards">
                    <% unless k_lower(offering) == "Team" %>
                        <%= render 'shared/offering/offering', offering: offering, class_name: "gameList" %>
                    <% else %>
                        <%= render 'teams/team', team: offering %>
                    <% end %>
                </div>
                <% if i == 2 || offering == @offerings.last %>
                </div>
                <% end %>
            <%
                    if i == 2
                        i = 0
                    else
                        i = i + 1
                    end
            %>
            <% end %>
        </div>



        <div class="span3">

            <ul class="nav nav-list">
                <li class="divider"></li>
                 <li class="nav-header">Offering Type</li>
                 <li class="divider"></li>
            <% for row in @search.facet(:offering_type).rows %>

              <li>
                <% if params[:offering_type].blank? %>
                    <% if row.value == "PersonalTrainer" %>
                            <%= link_to "Personal Trainers " + "(#{row.count})", :offering_type => row.value, search: params[:search], city: params[:city] %>
                    <% elsif row.value == "GroupTraining" %>
                            <%= link_to "Classes " + "(#{row.count})", :offering_type => row.value, search: params[:search], city: params[:city] %>
                    <% else %>
                            <%= link_to row.value.pluralize + " " + "(#{row.count})", :offering_type => row.value, search: params[:search], city: params[:city] %>
                    <% end %>
                <% else %>
                    <%= link_to "#{row.value.pluralize} (remove)", :offering_type => nil, search: params[:search], city: params[:city] %>
                <% end %>
            <% end %>
              </li>
              <li class="divider"></li>
            </ul>

            <%= render "shared/city_facet" %>
        </div>
    </div>


  </div>
  </div>