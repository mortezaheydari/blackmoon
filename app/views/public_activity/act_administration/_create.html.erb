<%# act_administration.create %>

<%# 1. feed %>
	<% if @render_for.nil? || @render_for == "feed" %>
		<% if activity.recipient && activity.trackable %>
			<%= link_to activity.recipient.profile.name, activity.recipient %> is now administrating <%= link_to activity.trackable.title, activity.trackable %>.

		<%- end %>

<%# 2. log %>
	<% elsif @render_for == "log" %>
        <% if activity.owner && activity.recipient  %>
            <%= link_to activity.owner.title, activity.owner %> added <%= link_to activity.recipient.title, activity.recipient %> to administration board.

        <% elsif activity.recipient %>
            <%= link_to activity.recipient.title, activity.recipient %> was added to administration board.

        <%- end %>

<%# 3. notification %>
	<% elsif @render_for == "notification" %>
        <% if activity.trackable %>
            you have been added to administrate <%= link_to activity.trackable.title, activity.trackable %>.

        <% else %>
            you were added to administrate an offering, which has since been removed.

        <%- end %>

<%# 4. public %>
	<% elsif @render_for == "public" %>

<%# 5. else %>

	<% else %>
		new admin added.

	<%- end %>