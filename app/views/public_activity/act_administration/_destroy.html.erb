<%# offering_administration.destroy %>

<%# 1. feed %>
    <% if @render_for.nil? || @render_for == "feed" %>

<%# 2. log %>
    <% elsif @render_for == "log" %>
        <% if activity.owner && activity.recipient  %>
            <%= link_to activity.owner.title, activity.owner %> removed <%= link_to activity.recipient.title, activity.recipient %> from administration board.

        <% elsif activity.recipient %>
            <%= link_to activity.recipient.title, activity.recipient %> was removed from administration board.

        <%- end %>

<%# 3. notification %>
    <% elsif @render_for == "notification" %>
        <% if activity.trackable %>
            you no longer administrate <%= link_to activity.trackable.title, activity.trackable %>.

        <% else %>
            you were removed from administrating an offering, which has since been removed.

        <%- end %>

<%# 4. public %>
    <% elsif @render_for == "public" %>

<%# 5. else %>
    <% else %>
        admin removed.

    <%- end %>

