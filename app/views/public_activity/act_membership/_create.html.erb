<!-- act_membership.create -->

<!-- 1. team activity -->
	<% if ["Team"].include? activity.recipient_type  %>

		"new member added "<%= link_to activity.owner.title, activity.owner %>" added.

<!-- 2. user notification -->
	
	<% elsif activity.recipient_type == "User" %>

		<% if activity.trackable %>
			"you have been added to participate in "<%= link_to activity.trackable.title, activity.trackable %>".
		<% else %>
			you were added to participate in a team, which has since been removed.
		<%- end %>

<!-- 3. other -->	

	<% else %>
		new participator added.
		
	<%- end %>
