<!-- act_membership.create -->

<!-- 1. feed -->
	<% if render_for.nil? || render_for == "feed" %>
		<% if activity.recipient && activity.trackable %>
			"new member "<%= link_to activity.recipient.title, activity.owner %>" is now a member of "<%= link_to activity.recipient.profile.name, activity.recipient %>".

		<%- end %>

<!-- 2. log -->
	<% elsif render_for == "log" %>
		"<%= link_to activity.recipient.profile.name, activity.recipient %>" is now a member.

<!-- 3. notification -->
	<% elsif render_for == "notification" %>
		<% if activity.trackable %>
			you are now a member of "<%= link_to activity.trackable.title, activity.trackable %>".

		<%- end %>

<!-- 4. public -->

<!-- 5. else -->

	<% else %>
		new member added.

	<%- end %>
