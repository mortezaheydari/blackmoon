<!-- event.update -->

<!-- 1. event activity -->

	<% if activity.recipient_type == "Event" %>

		Event updated
		<% if activity.owner %>
			by <%= link_to "#{activity.owner.name}", activity.owner %>
		<%- end %>
		.

<!-- 2. user notification -->

	<% elsif activity.recipient_type == "User" %>

		<% if activity.trackable %>
			the event "<%= link_to activity.trackable.title, activity.trackable %>"which you are tracking is updated.
		<% else %>
			an event was updated, which has since been removed.
		<%- end %>

<!-- 3. other -->	

	<% else %>
		an event was updated.
		
	<%- end %>