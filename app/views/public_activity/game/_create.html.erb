<%# game.create %>

<%# 1. feed %>
	<% if @render_for.nil? || @render_for == "feed" %>
		<% if activity.owner && activity.trackable %>
			<%= link_to activity.owner.title, activity.owner %> created a new game <%= link_to activity.trackable.title, activity.trackable %>.

		<%- end %>

<%# 2. log %>
	<% elsif @render_for == "log" %>
		<% if activity.owner %>
			created by <%= link_to activity.owner.title, activity.owner %>.

		<% else %>
			created.

		<%- end %>

<%# 3. notification %>

<%# 4. public %>
	<% elsif @render_for == "public" %>
		new <%= link_to "game", activity.trackable %> is available.

<%# 5. else %>

	<% else %>
		new game is available.

	<%- end %>