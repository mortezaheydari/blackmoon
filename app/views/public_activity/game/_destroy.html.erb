<!-- game.destroy -->

<!-- 1. Game activity -->

	<% if activity.recipient_type == "Game" %>

		Game expired.

<!-- 2. user notification -->

	<% elsif activity.recipient_type == "User" %>

		<% if activity.trackable %>
			the game "<%= link_to activity.trackable.title, activity.trackable %>"  which you been tracking has expired.
		<% else %>
			a game which you been tracking has expired.
		<%- end %>

<!-- 3. other -->	

	<% else %>
		a Game was expired.

	<%- end %>

