<%# game.update %>

<%# 1. feed %>
	<% if render_for.nil? || render_for == "feed" %>

<%# 2. log %>
	<% elsif render_for == "log" %>
		<% if activity.owner %>
			updated by "<%= link_to activity.owner.title, activity.owner %>".

		<% else %>
			updated.

		<%- end %>

<%# 3. notification %>
	<% elsif render_for == "notification" %>
	
<%# 4. public %>
	<% elsif render_for == "public" %>

<%# 5. else %>

	<% else %>
		game updated.

	<%- end %>