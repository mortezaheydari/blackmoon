<!-- offering_administration.create -->

<!-- 1. Offering activity -->
	<% if ["Game", "Event"].include? activity.recipient_type  %>

		"<%= link_to activity.owner.title, activity.owner %>" was added to administration board.

<!-- 2. user notification -->
	
	<% elsif activity.recipient_type == "User" %>

		<% if activity.trackable %>
			"you have been added to administrate "<%= link_to activity.trackable.title, activity.trackable %>".
		<% else %>
			you were added to administrate an offering, which has since been removed.
		<%- end %>

<!-- 3. other -->	

	<% else %>
		a new admin was added.
		
	<%- end %>


