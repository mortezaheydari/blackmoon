<!-- offering_individual_participation.destroy -->

<!-- 1. Offering activity -->
	<% if ["Game", "Event"].include? activity.recipient_type  %>

		"<%= link_to activity.owner.title, activity.owner %>" no longer participates.

<!-- 2. user notification -->
	
	<% elsif activity.recipient_type == "User" %>

		<% if activity.trackable %>
			"you no longer participate in "<%= link_to activity.trackable.title, activity.trackable %>".
		<% else %>
			your participation was canceled in an offering, which has since been removed.
		<%- end %>

<!-- 3. other -->	

	<% else %>
		participator removed.
		
	<%- end %>