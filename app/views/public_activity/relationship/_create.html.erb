<%#  relationship.create %>

<%#  1. feed %>
	<% if @render_for.nil? || @render_for == "feed" %>
		<% if activity.owner && activity.recipient %>
			"<%= link_to activity.owner.title, activity.owner %>" started following "<%= link_to activity.recipient.title, activity.recipient %>".

		<%- end %>

<%#  2. log %>
	<% elsif @render_for == "log" %>
		message

<%#  3. notification %>
	<% elsif @render_for == "notification" %>
		<% if activity.trackable %>
			you have a new follower: "<%= link_to activity.owner.title, activity.owner %>".
		<% else %>

		<% end %>
		
<%#  4. public %>
	<% elsif @render_for == "public" %>

<%#  5. else %>
	<% else %>
		new follower.

	<%- end %>	