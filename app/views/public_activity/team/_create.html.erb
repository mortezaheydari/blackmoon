<%# team.create %>

<%# 1. feed %>
	<% if render_for.nil? || render_for == "feed" %>
		<% if activity.owner && activity.trackable %>
			"<%= link_to activity.owner.name, activity.owner %>" created "<%= link_to activity.trackable.title, activity.trackable %>".

		<%- end %>

<%# 2. log %>
	<% elsif render_for == "log" %>
		<% if activity.owner %>	
			created by "<%= link_to activity.owner.name, activity.owner %>".

		<% else %>
			created.

		<%- end %>		

<%# 3. notification %>
	<% elsif render_for == "notification" %>
	

<%# 4. public %>
	<% elsif render_for == "public" %>
		<% if activity.trackable %>
			"new <%= link_to activity.trackable.class.to_s, activity.trackable %>" was created.

		<%- end %>
<%# 5. else %>

	<% else %>
		new group created.

	<%- end %>