<!-- team.destroy -->

<!-- 1. team activity -->

	<% if activity.recipient_type == "Team" %>

		team expired.

<!-- 2. user notification -->

	<% elsif activity.recipient_type == "User" %>

		<% if activity.trackable %>
			the team "<%= link_to activity.trackable.title, activity.trackable %>"  which you been tracking has expired.
		<% else %>
			a team which you been tracking has expired.
		<%- end %>

<!-- 3. other -->	

	<% else %>
		a team was expired.

	<%- end %>

