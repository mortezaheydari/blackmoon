<!-- remeber the doppelganger -->
<%= content_tag("div", "", class: "cardsection #{class_name}", remote: :true) do %>

    <%  individuals.each do |individual| %>
        <% if class_name == "likes" %>
            <% if makeadmin == true %>
                <%= render 'users/usercards', person: individual.flagger, this: this, class_name: class_name %>
            <% else %>
                <%= render 'users/usercardslist', person: individual.flagger %>
            <% end %>
        <% else %>
            <% if makeadmin == true %>
                <% if individual.class.to_s == "Team" %>
                    <%= render 'teams/team', team: individual %>
                <% else %>
                    <%= render 'users/usercards', person: individual, this: this, class_name: class_name  %>
                <% end %>
            <% else %>
                <% if individual.class.to_s == "Team" %>
                    <%= render 'teams/team', team: individual %>
                <% else %>
                    <%= render 'users/usercardslist', person: individual %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>