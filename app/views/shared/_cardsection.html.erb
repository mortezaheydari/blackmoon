<!-- remeber the doppelganger -->
<%= content_tag("div", "", class: "cardsection #{class_name}", remote: :true) do %>

    <%  individuals.each do |individual| %>
        <% if class_name == "likes" %>
            <% if makeadmin == true %>
                <%= render 'users/usercards', person: individual.flagger, offering: offering, typefor: typefor %>
            <% else %>
                <%= render 'users/usercardslist', person: individual.flagger %>
            <% end %>
        <% else %>
            <% if makeadmin == true %>
                <%= render 'users/usercards', person: individual, offering: offering, typefor: typefor %>
            <% else %>
                <%= render 'users/usercardslist', person: individual %>
            <% end %>
        <% end %>
    <% end %>
<% end %>