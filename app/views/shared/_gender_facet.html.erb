<ul class="nav nav-list">
    <li class="divider"></li>
     <li class="nav-header">Gender</li>
    <li class="divider"></li>
<% for row in @search.facet(:gender).rows %>

    <li>
        <% if params[:gender].blank? %>
            <%= link_to row.value + " " + "(#{row.count})", :gender => row.value, search: params[:search], team_participation: params[:team_participation], sport: params[:sport], offering_type: params[:offering_type], city: params[:city] %>
        <% else %>
            <%= link_to "#{row.value} (remove)", :gender => nil, search: params[:search],  team_participation: params[:team_participation], sport: params[:sport], offering_type: params[:offering_type], city: params[:city]  %>
        <% end %>
    </li>
<% end %>
    <li class="divider"></li>
</ul>