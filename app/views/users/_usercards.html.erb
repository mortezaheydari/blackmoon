<article class="userCard">
  <header class="userCardHeader">
     <%= link_to  logo_for(person, css_class: "userCardImage left"), user_path(person)%>
    <h5 class="userCardTitle text-left">
      <%= link_to person.name, user_path(person) %>
    </h5>
  </header>

  <div class="userCardLevel">
    <p>Level: First Boomer</p>
  </div>

  <div class="userCardRecent text-left">
    <p>Recent Activities</p>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
<span id="makeAdmin<%= person.id %>">
    <% if user_is_admin?(this) %>
        <% if !user_is_admin?(this,person) %>
            <%= render 'users/make_admin', person: person,  this: this  %>
        <% elsif user_is_admin?(this, person) && (user_created_this?(this) or current_user?(person)) && this.administrators.count > 1 %>
            <%= render 'users/remove_admin', person: person,  this: this %>
        <% end %>
    <% end %>

    <%= render 'shared/invite_button', this: this, person: person %>

</span>

  </div>
</article>