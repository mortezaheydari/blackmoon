<article class="userCard">
  <header class="userCardHeader">
     <%= link_to  gravatar_for(person, gravatar_class: "userCardImage left"), user_path(person)%>
    <h5 class="userCardTitle text-left">
      <%= link_to person.name, user_path(person) %>
    </h5>
  </header>

  <div class="userCardLevel">
    <p>Level: First Boomer</p>
  </div>

  <div class="userCardRecent text-left">
    <p>Recent Activities</p>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <% if user_is_admin?(offering) %>
        <% if !user_is_admin?(offering,person) %>
            <%= render 'users/make_admin', person: person,  offering_id: offering.id, typefor: typefor %>
        <% elsif user_is_admin?(offering, person) && (user_created_this?(offering) or current_user?(person)) && offering.administrators.count > 1 %>
            <%= render 'users/remove_admin', person: person,  offering_id: offering.id, typefor: typefor %>
        <% end %>
    <% end %>
  </div>
</article>