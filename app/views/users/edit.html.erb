<div class="body">
    <div class="leftContent">

            <h1>Update your profile <%= @user.name.to_s.humanize %></h1>

            <div class="row">
            	<div class="span6 offset3">
            		<%= form_for(@user) do |f| %>
            			<%= render 'shared/error_messages', object: f.object %>
                            <div class="gravatarContainer">
                                <%= gravatar_for @user %>
                                <a href="http://gravatar.com/emails" class="button grey">change</a>
                            </div>


            			<div><%= f.label "User Name" %><br />
            			<%= f.text_field :name, class: "TextField" %></div>

            			<%= f.fields_for :profile do |profile_form| %>

            				<div><%= profile_form.label :first_name %><br />
            				<%= profile_form.text_field :first_name, class: "TextField" %></div>

            				<div><%= profile_form.label :last_name %><br />
            				<%= profile_form.text_field :last_name, class: "TextField" %></div>

            				<div><%= profile_form.label :phone %><br />
            				<%= profile_form.text_field :phone, class: "TextField" %></div>

            				<div><%= profile_form.label :date_of_birth %><br />
            				<%= select_date @date_of_birth, :prefix => :date_of_birth, :start_year => Time.now.year, :end_year => Time.now.year - 95 %></div>

            				<div><%= profile_form.label :about %><br />
                		<%= profile_form.text_area :about,
                						placeholder: "Write something about yourself..." %></div>

            			<% end %>

            			<div><%= f.submit "Save changes", class: " submitBtn button blue" %></div>
            		<% end %>

            	</div>
            </div>
      </div>

