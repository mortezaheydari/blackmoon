<div id="tabPanelWrapper"></div>

<div class="body">
    <div class="offering_management">
                    <h1>Manage Offerings </h1>

                    <table width="100%">
                        <tr>
                             <th >Type</th>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Joined</th>
                            <th>Liked</th>
                            <th>Link</th>
                        </tr>

<!-- Personal Training -->
                        <tr>
                            <td colspan="7" class="offeringtype" id="ptType">
                                 <%= image_tag "fitness-icon.png", width: 25 %> <a href="#">Personal Training (<%= @personal_trainers.count %>)</a> <%= image_tag "drop-icon.png", width: 20, class: "drop" %>
                            </td>
                        </tr>

                        <% @personal_trainers.each do |e| %>
                            <tr class="ptdata">
                                <td></td>
                                <td>
                                    <div class="managementImg">
                                        <%= logo_for(e, size: :small) %><%= link_to e.title, personal_trainer_path(e) %>
                                    </div>
                                </td>
                                <td>N/A</td>
                                <td><%= e.location.custom_address %></td>
                                <td>N/A</td>
                                <td><%= link_to "("+e.flaggings.with_flag(:like).count.to_s+")", personal_trainer_path(e)  %> </td>
                                <td>
                                    <%= link_to "Edit", edit_personal_trainer_path(e), class: "button blue" %>
                                </td>
                            </tr>
                        <% end -%>



<!-- Classes -->


                        <tr>
                            <td colspan="7" class="offeringtype" id="clType">
                                <%= image_tag "class-icon.png", width: 25 %> <a href="#">Classes (<%= @group_trainings.count %>)</a> <%= image_tag "drop-icon.png", width: 20, class: "drop" %>
                            </td>
                        </tr>

                        <% @group_trainings.each do |e| %>
                            <tr class="cldata">
                                <td></td>
                                <td>
                                    <div class="managementImg">
