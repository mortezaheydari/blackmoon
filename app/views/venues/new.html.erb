<div class="body">
	<div class="offering">
                    <h1><%= image_tag "event-icon.png", width: 50 %> Create New Venue</h1>
		<%= form_for(@venue) do |f| %>

                            <div>
                                <table  width="100%">
                                    <tr>
                                        <td><%= f.label :title, "Venue Title: " %></td>
                                        <td><%= f.text_field :title %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :descreption, "Description" %></td>
                                        <td><%= f.text_area :descreption %></td>
                                    </tr>
                                </table>
                            </div>
<hr>

                    <h2>2. Location:</h2>

                            <div>
                                <table width="100%">
                                    <tr>
                                        <td><%= f.label :address, "Address:" %></td>
                                        <td><%= f.text_field :address %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :latitude, "latitude:" %></td>
                                        <td><%= f.text_field :latitude %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :longitude, "longitude:" %></td>
                                        <td><%= f.text_field :longitude %></td>
                                    </tr>
                                    <tr>
                                        <td><%= f.label :gmaps, "Use Google maps tag:" %></td>
                                        <td><%= f.check_box :gmaps %></td>
                                    </tr>
                                    <tr>
                                        <td><label for="div">Tag a place:</label></td>
                                        <td><div style='width: 800px;'>
                                          <div id="map" style='width: 800px; height: 400px;'></div>
                                        </div></td>
                                    </tr>
                                </table>

                            </div>


	</div>
                <%= f.submit "Create the Venue", class: "button grey submitBtn homeBtn left" %>


        <% end %>
</div>
